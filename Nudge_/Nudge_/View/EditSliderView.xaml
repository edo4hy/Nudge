<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nudge_.View.EditSliderView">
    <ContentView.Content>
        <StackLayout>
            <ContentView>
                <StackLayout Padding="10">
                    <StackLayout>
                        <Label FontSize="Medium" x:Name="SliderTitle" HorizontalOptions="CenterAndExpand"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">
                            <Label x:Name="NegativeAnswer"  />
                        </StackLayout>
                        <StackLayout Orientation="Vertical" HorizontalOptions="EndAndExpand">
                            <Label x:Name="PositiveAnswer"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout  Orientation="Horizontal" HorizontalOptions="Center">
                        <Button WidthRequest="80" FontSize="Micro" Text="Delete" HeightRequest="30"  />
                    </StackLayout>
                </StackLayout>   
            </ContentView>
        </StackLayout>
    </ContentView.Content>
</ContentView>