<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nudge_.View.SettingsPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Send Notificiations"/>
            <Switch x:Name="SendNotifications" PropertyChanged="SendNotifications_PropertyChanged" ></Switch>
            
            <Label  x:Name="SliderDisplay" Text="{Binding Source={x:Reference FrequencyPicker}, Path=Value, StringFormat='Frequency {0:F0}'}"/>
            <Slider x:Name="FrequencyPicker" Maximum="50" Minimum="0" ValueChanged="FrequencyPicker_SelectedIndexChanged"/>
            
            <Label Text="Start time:"/>
            <TimePicker x:Name="DailyStartTime"  IsVisible="True" PropertyChanged="DailyStartTime_PropertyChanged" ></TimePicker>
            <Label Text="End time:"/>
            <TimePicker x:Name="DailyEndTime"  IsVisible="True" PropertyChanged="DailyEndTime_PropertyChanged" ></TimePicker>
            
            <ListView>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>