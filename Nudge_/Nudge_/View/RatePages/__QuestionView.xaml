<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nudge_.View.QuestionView">
  <ContentView.Content>
      <StackLayout>
            <StackLayout x:Name="QuestionSearchBar">
                <Label FontSize="Medium" x:Name="QuestionTitle" HorizontalOptions="CenterAndExpand"/>

                <SearchBar FontSize="Small" TextChanged="SearchBar_TextChanged" x:Name="Searchbar" Focused="Searchbar_Focused" Unfocused="Searchbar_Unfocused"/>
                <StackLayout Padding="20">
                    <ListView x:Name="SearchList" IsVisible="False" ItemSelected="ListView_ItemSelected" HeightRequest="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                    <TextCell Text="{Binding AnswerText}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <BoxView WidthRequest="1000" HeightRequest="0.5" Opacity="0.5" HorizontalOptions="Center" Color="Black">
                </BoxView>
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>