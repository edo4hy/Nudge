<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nudge_.View.EditQuestionView">
  <ContentView.Content>
      <StackLayout>
            <StackLayout x:Name="QuestionSearchBar" >
                    <Label FontSize="Medium" x:Name="QuestionTitle" HorizontalOptions="CenterAndExpand"/>
                <StackLayout  Orientation="Horizontal" HorizontalOptions="Center">
                    <Button WidthRequest="80" FontSize="Micro" Text="Delete" HeightRequest="30"  />
                </StackLayout>
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>